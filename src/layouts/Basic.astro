---
export interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={icon} />
  </head>

  <body>
    <slot />
  </body>
</html>
